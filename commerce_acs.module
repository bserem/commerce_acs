/**
 * Shipping service callback: returns a base price array for a shipping service
 * calculated for the given order.
 */
function commerce_acs_rate($shipping_service, $order) {
  $order_wrapper = entity_metadata_wrapper('commerce_order', $order);
  $total_weight = 0;
  $total_count = 0;
  $total_length = 0;
  $total_width = 0;
  $total_height = 0;

    foreach ($order->commerce_line_items[LANGUAGE_NONE] as $item){
      $line_item = commerce_line_item_load($item['line_item_id']);
      if ($line_item->type == 'product') {
        $product = commerce_product_load($line_item->commerce_product[LANGUAGE_NONE][0]['product_id']);
      }
      if (isset($product->field_weight[LANGUAGE_NONE][0])) {
        $weight =$product->field_weight[LANGUAGE_NONE][0]['value']; //normal decimal field
        $count = $line_item->quantity;
        $total_weight += $weight * $count;
        $total_count += $count;
      }
      if (isset($product->field_dimensions[LANGUAGE_NONE][0])) {
        $length =$product->field_dimensions[LANGUAGE_NONE][0]['length'];
        $width =$product->field_dimensions[LANGUAGE_NONE][0]['width'];
        $height =$product->field_dimensions[LANGUAGE_NONE][0]['height'];
        $total_length += $length * $count;
        $total_width += $width * $count;
        $total_height += $height * $count;
      }
    }

$shipping = $order_wrapper->commerce_customer_shipping->commerce_customer_address->value();
